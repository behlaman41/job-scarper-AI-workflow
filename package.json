{
  "name": "job-scraper-automation",
  "version": "1.0.0",
  "description": "Daily job scraping system with AI analysis and email automation",
  "main": "scrapers/index.js",
  "scripts": {
    "start": "node scrapers/server.js",
    "scrape": "node scrapers/index.js",
    "jobscraper": "node scripts/run-workflow.js",
    "jobscraper:docker": "docker-compose run --rm jobscraper-run",
    "test": "node test.js",
    "setup-interactive": "node setup.js",
    "setup": "docker-compose up -d",
    "logs": "docker-compose logs -f",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "build": "docker-compose build",
    "clean": "docker-compose down -v && docker system prune -f",
    "status": "docker-compose ps",
    "install-deps": "npm install",
    "test-email": "node scrapers/email-service.js",
    "test-ai": "node scrapers/ai-analyzer.js",
    "test-scraper": "node scrapers/index.js"
  },
  "keywords": [
    "job-scraping",
    "automation",
    "n8n",
    "playwright",
    "ollama",
    "ai"
  ],
  "author": "Job Scraper Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "playwright": "^1.40.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
